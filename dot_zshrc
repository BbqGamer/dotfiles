# Use powerline
USE_POWERLINE="true"

if [[ -e $HOME/.config/shell/zsh-config ]]; then
  source $HOME/.config/shell/zsh-config
fi

if [[ -e $HOME/.config/shell/zsh-prompt ]]; then
  source $HOME/.config/shell/zsh-prompt
fi

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/adam/var/apps/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/adam/var/apps/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/adam/var/apps/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/adam/var/apps/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

